<%= form_with model: @user, local: true do |form| %>

    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@user.errors.count, "error") %>
                interfered with the saving of this user data:
            </h2>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </p>

    <p>
        <%= form.label :uid %><br>
        <%= form.text_field :uid %>
    </p>

    <p>
        <%= form.submit %>
    </p>

<% end %>