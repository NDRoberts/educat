<h1>All Known Users</h1>

<table>
    <tr>
        <th>Name</th>
        <th>User ID</th>
        <th></th>
    </tr>

    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.uid %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user_path(user),
                method: :delete,
                data: { confirm: 'Really consign this user to the dustbin of history?' } %>
                </td>
        </tr>
    <% end %>
</table>

<p><%= link_to 'New User', new_user_path %></p>